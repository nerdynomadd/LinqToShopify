<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <OutputType>Library</OutputType>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <PackageOutputPath>./../../output</PackageOutputPath>
        <PackageProjectUrl>https://github.com/Kakktuss/LinqToShopify</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Kakktuss/LinqToShopify</RepositoryUrl>

        <RepositoryType>git</RepositoryType>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
        <Description>Strongly typed Shopify GraphQL queries and mutations requests for IQueryable and Linq lovers.</Description>
        <Version>1.2.3</Version>
        <PackageId>LinqToShopify</PackageId>
        <PackageTags>GraphQL Shopify LINQ api</PackageTags>
        <RootNamespace>LinqToShopify</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <Folder Include="GraphQL\Admin" />
        <Folder Include="GraphQL\Admin\Context\ProductCollection\Types\Collection\Mutation" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="LinqToGraphQL" Version="1.3.1" />
    </ItemGroup>

</Project>
